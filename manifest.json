{
  "manifest_version": 2,
  "name": "PSE Milestone Expander Plugin",
  "description": "This extension will let you see the entire text of the (usually long) PSE Milestone names",
  "version": "1.0",
  "author": "Remus Victuelles (Salesforce)",
  "permissions": [
   "activeTab"
   ],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "browser_action": {
   "default_icon": "icon.png",
   "default_title": "Expand PSE Milestones"
  },
  "icons": { "16": "icon16.png",
            "32": "icon32.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}